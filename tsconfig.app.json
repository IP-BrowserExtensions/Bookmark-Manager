/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/app",
    "typeRoots": ["node_modules/@types"],
    "paths": {
      "@api/*": ["src/api/*.ts"],
      "@helpers/*": ["src/helpers/*.ts"]
    }
    // "types": ["chrome", "browser"]
  },
  "files": ["src/main.ts", "src/polyfills.ts", "src/background-script/background.ts"],
  "include": ["src/**/*.d.ts"]
}
